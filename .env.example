# Copy this file to .env for local development.
# In production, prefer injecting environment variables via systemd/nginx or your platform.

# Required
# Used to derive CSRF tokens. MUST be a long random string in production.
APP_SECRET="CHANGE_ME__LONG_RANDOM_SECRET"

# Prisma database connection string.
# Dev default: SQLite file in the repo root.
DATABASE_URL="file:./med.db"

# Optional health alerting
SERVICE_NAME="med"
HEALTH_ALERT_WEBHOOK=""
HEALTH_ALERT_TTL_MS="3600000"

# Optional server behavior
SKIP_SERVER="0"
